---
import '@fontsource/poppins';
import '@fontsource/poppins/800.css';

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/AstroClouds/favicon.png" />
		<title>{ title }</title>
	</head>
	<style>
		body {
  			font-family: 'Poppins', sans-serif;
		}
	</style>
	<body>
		<main class="mx-8 lg:mx-16 my-4">
			<slot />
		</main>
	</body>
</html>
