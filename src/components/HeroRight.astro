---
import { Icon } from "astro-icon/components";

const {
  title,
  alt,
  description,
  image_text = "En savoir plus",
  image_url = "#",
  button_text = "#",
  button_url = "#",
  icon = "mingcute:information-fill",
} = Astro.props;
---

<div class="min-h-96 flex my-2">
  <div class="w-1/2">
    <img
      src={image_url}
      class="max-w-sm w-full h-auto rounded-lg shadow-2xl"
      alt={image_text}
    />
  </div>
  <div class="w-1/2">
    <div class="justify-end flex w-full">
      <div class="pr-3">
        <h1 class="text-4xl font-bold">{title}</h1>
        <h3 class="magic text-end">{alt}</h3>
      </div>
      {
        icon.includes("/") && (
          <img
            src={icon}
            class="h-16 w-auto bg-primary p-1 rounded-lg"
            alt={title}
          />
        )
      }
      {!icon.includes("/") && <Icon name={icon} class="text-6xl" />}
    </div>
    <p class="py-6 text-end">{description}</p>
    {
      !button_text.includes("#") && (
        <a class="btn btn-primary " href={button_url}>
          {button_text}
        </a>
      )
    }
  </div>
</div>
